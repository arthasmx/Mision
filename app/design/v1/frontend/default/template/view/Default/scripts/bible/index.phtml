      echo "</ul></td><td><ul>";
    }

    echo "<li> <a href='". App::base( App::xlat('route_bible') . $book['seo'] ) ."'>". $book['book'] . "</li>";
    $iteration++;

    if( $iteration == $settings[$book['testament']]['move_to_column_one'] ){
      echo "</ul></td></tr>";
    }

  }
